<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardView"
        android:layout_margin="5sp"
        card_view:cardCornerRadius="1dp"
        card_view:contentPadding="5sp"
        card_view:cardElevation="3sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/imageView"
                    android:src="@mipmap/ic_launcher"
                    android:layout_marginRight="5dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textTitle"
                    android:text="Hello"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="99"
                    android:lines="2"
                    android:gravity="center_vertical"></TextView>
                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/buttonEdit"
                    android:layout_gravity="right"
                    android:layout_weight="-1"
                    android:alpha="1"
                    android:background="@drawable/abc_ic_menu_cut_mtrl_alpha"
                    android:backgroundTint="@color/abc_search_url_text_selected"
                    android:textColor="#000"
                    android:textColorLink="#76010001" />
                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/button"
                    android:layout_gravity="right"
                    android:layout_weight="-1"
                    android:alpha="1"
                    android:background="@drawable/abc_ic_menu_paste_mtrl_am_alpha"
                    android:backgroundTint="@color/abc_search_url_text_selected"
                    android:textColor="#010001"
                    android:textColorLink="#76010001" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"></View>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textAbout"
                android:text="About fro About fro About fro About fro About fro About fro About fro About fro About froAbout fro"
                android:textSize="14sp"
                android:lines="3"
                android:singleLine="false"></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textDate"
                android:text="Hello"
                android:textSize="14sp"
                android:textStyle="italic"
                android:elegantTextHeight="false"
                android:singleLine="true"
                android:editable="false"
                android:autoText="false"
                android:gravity="bottom|end"></TextView>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>